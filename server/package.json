{
  "name": "romeano-server",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/logging": "^9.3.0",
    "@koa/router": "^10.0.0",
    "@prisma/client": "2.23.0",
    "@sentry/node": "^6.4.1",
    "apollo-server-koa": "^2.25.0",
    "graphql": "^15.5.0",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-send": "^5.0.1",
    "lodash": "^4.17.21",
    "uuid": "^8.3.2",
    "zod": "^3.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-resolvers": "1.19.2",
    "@tsconfig/node16": "^1.0.1",
    "@types/jest": "^26.0.23",
    "@types/koa-send": "^4.1.2",
    "@types/koa__router": "^8.0.4",
    "@types/lodash": "^4.14.170",
    "@types/multer": "^1.4.5",
    "@types/node": "^15.6.1",
    "@types/uuid": "^8.3.0",
    "jest": "^27.0.2",
    "prisma": "2.23.0",
    "ts-jest": "^27.0.1",
    "ts-node": "^10.0.0",
    "ts-node-dev": "1.1.6",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "start": "NODE_ENV=development ts-node-dev --no-notify --respawn --transpile-only src/index.ts",
    "start-prod": "cd ../client && yarn build && cd - && NODE_ENV=production ts-node src/index.ts",
    "start-prod-docker": "NODE_ENV=production ts-node src/index.ts",
    "postinstall": "if [[ -f codegen.yml ]]; then yarn codegen-gql; fi #for docker build to avoid running before source files are copied",
    "test": "jest",
    "generate:prisma": "prisma generate",
    "codegen-gql": "graphql-codegen --config codegen.yml",
    "codegen-db": "prisma migrate dev --name init"
  }
}
